<Window x:Class="CMCS.Pages.HRReportPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMCS.Pages"
        mc:Ignorable="d"
        Title="HRReportPage" Height="650" Width="1200" Background="{StaticResource Brush.Surface}" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource Brush.Primary}" CornerRadius="10" Padding="14">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="FileChart" Width="32" Height="32" Foreground="White" Margin="0,0,10,0"/>
                <TextBlock Text="Generate Monthly Report" FontSize="24" FontWeight="Bold" Foreground="White"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <StackPanel Width="200">
                    <TextBlock Text="Start Date" Foreground="{StaticResource Brush.Primary}" FontWeight="Bold"/>
                    <DatePicker x:Name="dpStart" Height="40"/>
                </StackPanel>

                <StackPanel Width="200" Margin="20,0,0,0">
                    <TextBlock Text="End Date" Foreground="{StaticResource Brush.Primary}" FontWeight="Bold"/>
                    <DatePicker x:Name="dpEnd" Height="40"/>
                </StackPanel>

                <Button Content="Filter" Style="{StaticResource PrimaryButton}" Width="120" Margin="20,25,0,0" Click="Filter_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <Border Background="#E3F7F5" CornerRadius="8" Padding="10" Width="200" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Total Claims" FontSize="14" FontWeight="Bold"/>
                        <TextBlock x:Name="txtTotal" FontSize="20" FontWeight="Black" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="#D4F1D0" CornerRadius="8" Padding="10" Width="200" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Approved" FontSize="14" FontWeight="Bold"/>
                        <TextBlock x:Name="txtApproved" FontSize="20" FontWeight="Black" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="#F5D0D0" CornerRadius="8" Padding="10" Width="200" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Rejected" FontSize="14" FontWeight="Bold"/>
                        <TextBlock x:Name="txtRejected" FontSize="20" FontWeight="Black" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <DataGrid x:Name="ReportGrid" AutoGenerateColumns="False" RowHeight="40" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ClaimId}" Width="70"/>
                    <DataGridTextColumn Header="Lecture" Binding="{Binding LectureName}" Width="*"/>
                    <DataGridTextColumn Header="Module" Binding="{Binding ModuleName}" Width="*"/>
                    <DataGridTextColumn Header="Total (R)" Binding="{Binding TotalAmount}" Width="100"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding status}" Width="100"/>
                    <DataGridTextColumn Header="Date Submitted" Binding="{Binding  DateSubmitted}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                <Button Content="Export PDF" Style="{StaticResource PrimaryButton}" Width="150" Click="ExportPDF_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
