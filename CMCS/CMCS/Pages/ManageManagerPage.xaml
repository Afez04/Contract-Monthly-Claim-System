<Window x:Class="CMCS.Pages.ManageManagerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMCS.Pages"
        mc:Ignorable="d"
        Title="ManageManagerPage" Height="550" Width="1400" Background="{StaticResource Brush.Surface}">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="87.007"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource Brush.Primary}" CornerRadius="10" Padding="16" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="AccountGroup" Width="35" Height="35" Foreground="White" Margin="0,0,12,0"/>
                <TextBlock Text="Manage Manager Records" FontSize="26" FontWeight="Bold" Foreground="White"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10,0,20,0">
                <TextBlock Text="Manager Details" FontSize="20" FontWeight="Bold" Foreground="{StaticResource Brush.Primary}" Margin="0,0,10,10"/>
                <TextBlock Text="Full Name" Foreground="{StaticResource Brush.Primary}" FontWeight="SemiBold"/>
                <TextBox x:Name="txtFullName" Margin="0,4,0,12"/>

                <TextBlock Text="Email" Foreground="{StaticResource Brush.Primary}" FontWeight="SemiBold"/>
                <TextBox x:Name="txtEmail" Margin="0,4,0,12"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                    <Button x:Name="btnGenerateUsername" Style="{StaticResource SecondaryButton}" Width="120" Content="Generate Username" Click="btnGenerateUsername_Click"/>
                    <TextBox x:Name="txtUsername" Style="{StaticResource Input}" Height="45" Width="200" Margin="15,0,0,0" IsReadOnly="True" Background="#F5F5F5" FontWeight="Bold" Foreground="{StaticResource Brush.Primary}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                    <Button x:Name="btnGeneratePassword" Style="{StaticResource SecondaryButton}" Width="120" Content="Generate Password" Click="btnGeneratePassword_Click"/>
                    <TextBox x:Name="txtPassword" Style="{StaticResource Input}" Height="45" Width="200" Margin="15,0,0,0" IsReadOnly="True" Background="#F5F5F5" FontWeight="Bold" Foreground="{StaticResource Brush.Primary}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Button Content="Add Manager" Style="{StaticResource PrimaryButton}" Width="120" Click="AddLecture_Click"/>
                    <Button Content="Update" Style="{StaticResource SecondaryButton}" Width="120" Margin="10,0,0,0" Click="updateLecturer_Click"/>
                    <Button Content="Delete" Style="{StaticResource DestructiveButton}" Width="120" Margin="10,0,0,0" Click="DeleteLecturer_Click"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Search Manager" FontSize="16" Foreground="{StaticResource Brush.Primary}" Margin="0,0,0,6" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="txtSearch" Width="250" Margin="0,0,10,0"/>
                    <Button Content="Search" Width="120" Style="{StaticResource PrimaryButton}" Click="Search_Click"/>
                </StackPanel>

                <DataGrid x:Name="ManagerTable" AutoGenerateColumns="False" CanUserAddRows="False" RowHeight="40" Background="White" BorderBrush="{StaticResource Brush.Accent}" BorderThickness="1" SelectionChanged="LecturerTable_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="60"/>
                        <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                        <DataGridTextColumn Header="Password" Binding="{Binding PasswordHash}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
